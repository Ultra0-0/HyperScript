MAVEN_PROJECTBASEDIR=$(dirname "$0")
if [ -z "$MAVEN_PROJECTBASEDIR" ]; then
  MAVEN_PROJECTBASEDIR=.
fi

if [ -f "$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.properties" ]; then
    . "$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.properties"

    WRAPPER_JAR_PATH="$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.jar"
    WRAPPER_DOWNLOAD_URL="$distributionUrl"

    if [ ! -f "$WRAPPER_JAR_PATH" ]; then
        echo "Downloading $WRAPPER_DOWNLOAD_URL"
        if [ -x "$(command -v curl)" ]; then
            curl -L -o "$WRAPPER_JAR_PATH" "$WRAPPER_DOWNLOAD_URL"
        elif [ -x "$(command -v wget)" ]; then
            wget -O "$WRAPPER_JAR_PATH" "$WRAPPER_DOWNLOAD_URL"
        else
            echo "Neither curl nor wget are available to download the Maven Wrapper."
            exit 1
        fi
    fi

    exec "$JAVA_HOME/bin/java" -Dmaven.multiModuleProjectDirectory="$MAVEN_PROJECTBASEDIR" -cp "$WRAPPER_JAR_PATH" org.apache.maven.wrapper.MavenWrapperMain "$@"
else
    # Fallback to the system-installed Maven
    exec mvn "$@"
fi